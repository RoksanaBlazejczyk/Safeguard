@page "/page2"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState
@inject CollectedAnswers Answer

<MudContainer Class="d-flex justify-center mt-3">
    <MudCard Elevation="5" Class="p-3 w-100">

        <SafeguardingHeader Title="How have you become aware of this incident?" />

        <MudGrid class="d-flex justify-center align-content-center" Style="margin-top: 3rem;">
            <MudItem xs="12" sm="12" lg="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Individual Concern</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton OnClick="@(() => ToPage3Person("individual"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary">Select</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="12" lg="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Student Concern</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton OnClick="@(() => ToPage3Student("student"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary">Selectt</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="12" lg="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h6">NCL Staff Concern</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton OnClick="@(() => ToPage3Staff("staff"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary">Select</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
            <MudItem xs="12" sm="12" lg="4">
                <MudCard>
                    <MudCardContent>
                        <MudText Typo="Typo.h6">Visitor Concern</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton OnClick="@(() => ToPage3Visitor("visitor"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary">Select</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudCard>
</MudContainer>

@code {
    void ToPage3Person(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43); // Move to 43% when navigating to Page 3
        Nav.NavigateTo("/page3");
    }
    void ToPage3Student(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43); 
        Nav.NavigateTo("/page3");
    }
    void ToPage3Staff(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43);
        Nav.NavigateTo("/page3");
    }
    void ToPage3Visitor(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43);
        Nav.NavigateTo("/page3");
    }
}

