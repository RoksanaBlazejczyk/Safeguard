@page "/page2"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState
@inject CollectedAnswers Answer

<MudContainer Class="d-flex justify-center mt-3">
    <MudCard Elevation="5" Class="p-3 w-100">
        <!-- Title area -->
        <MudCardContent Class="d-flex justify-center">
            <MudText Typo="Typo.h4" Style="font-size: 32px; font-weight: bold; text-align: center;">
                How have you become aware of this incident?
            </MudText>
        </MudCardContent>

        <MudGrid class="d-flex justify-center align-content-center" Style="margin-top: 3rem;">
            <!-- Individual Concern button -->
            <MudItem xs="12" sm="12" lg="6">
                <MudCard Style="background-color: #e0e0e0; border: 5px solid black; height: 150px;">
                    <MudCardContent Class="d-flex justify-center align-items-center">
                        <MudButton OnClick="@(() => ToPage3Person("individual"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Style="font-size: 16px; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 4;">
                            Individual involved raised concerns
                        </MudButton>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <!-- Student Concern button -->
            <MudItem xs="12" sm="12" lg="6">
                <MudCard Style="background-color: #e0e0e0; border: 5px solid black; height: 150px;">
                    <MudCardContent Class="d-flex justify-center align-items-center">
                        <MudButton OnClick="@(() => ToPage3Student("student"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Style="font-size: 16px; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 4;">
                            A student has raised concerns
                        </MudButton>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <!-- NCL Staff Concern button -->
            <MudItem xs="12" sm="12" lg="6">
                <MudCard Style="background-color: #e0e0e0; border: 5px solid black; height: 150px;">
                    <MudCardContent Class="d-flex justify-center align-items-center">
                        <MudButton OnClick="@(() => ToPage3Staff("staff"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Style="font-size: 16px; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 4;">
                            NCL staff member raised concern
                        </MudButton>
                    </MudCardContent>
                </MudCard>
            </MudItem>

            <!-- Visitor Concern button -->
            <MudItem xs="12" sm="12" lg="6">
                <MudCard Style="background-color: #e0e0e0; border: 5px solid black; height: 150px;">
                    <MudCardContent Class="d-flex justify-center align-items-center">
                        <MudButton OnClick="@(() => ToPage3Visitor("visitor"))" Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Style="font-size: 16px; height: 100%; display: flex; align-items: center; justify-content: center; border-radius: 4;">
                            A Visitors to NCL raised concern
                        </MudButton>
                    </MudCardContent>
                </MudCard>
            </MudItem>
        </MudGrid>
    </MudCard>
</MudContainer>



@code {
    void ToPage3Person(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43); // Move to 43% when navigating to Page 3
        Nav.NavigateTo("/page3");
    }
    void ToPage3Student(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43); 
        Nav.NavigateTo("/page3");
    }
    void ToPage3Staff(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43);
        Nav.NavigateTo("/page3");
    }
    void ToPage3Visitor(String answer)
    {
        Answer.Answer2 = answer;
        LayoutState.UpdateProgress(43);
        Nav.NavigateTo("/page3");
    }
}

