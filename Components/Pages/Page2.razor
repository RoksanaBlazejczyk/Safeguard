@page "/page2"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState

<MudContainer Class="d-flex justify-center" Style="height: 100vh; background-color: #B9B5B0;">

    <!-- Header Section at the top -->
    <MudGrid Justify="Justify.Center" Style="margin-top: 2rem;">
        <MudItem xs="12">
            <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-4" Style="font-weight: bold; color: #333;">
                How have you become aware of this incident?
            </MudText>
        </MudItem>
    </MudGrid>

    <!-- Button Grid -->
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="3" Style="margin-top: 2rem;">

        <!-- Individual Concern -->
        <MudItem xs="12" sm="6" md="3" class="d-flex justify-content-center">
            <MudButton OnClick="ToPage3Person" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="animated-button">
                Select Individual
            </MudButton>
        </MudItem>

        <!-- Student Concern -->
        <MudItem xs="12" sm="6" md="3" class="d-flex justify-content-center">
            <MudButton OnClick="ToPage3Student" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="animated-button">
                Select Student
            </MudButton>
        </MudItem>

        <!-- NCL Staff Concern -->
        <MudItem xs="12" sm="6" md="3" class="d-flex justify-content-center">
            <MudButton OnClick="ToPage3Staff" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="animated-button">
                Select Staff Member
            </MudButton>
        </MudItem>

        <!-- Visitor Concern -->
        <MudItem xs="12" sm="6" md="3" class="d-flex justify-content-center">
            <MudButton OnClick="ToPage3Visitor" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" Class="animated-button">
                Select Visitor
            </MudButton>
        </MudItem>

    </MudGrid>

</MudContainer>

@code {
    void ToPage3Person()
    {
        LayoutState.UpdateProgress(50); // Move to 50% when navigating to Page 3
        Nav.NavigateTo("/page3");
    }

    void ToPage3Student()
    {
        LayoutState.UpdateProgress(50);
        Nav.NavigateTo("/page3");
    }

    void ToPage3Staff()
    {
        LayoutState.UpdateProgress(50);
        Nav.NavigateTo("/page3");
    }

    void ToPage3Visitor()
    {
        LayoutState.UpdateProgress(50);
        Nav.NavigateTo("/page3");
    }
}
