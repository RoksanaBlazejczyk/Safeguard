@page "/page5"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState
<h1>Where did the School Pupil Disclose?</h1>
<br />
<div style="background-color: #B9B5B0; height: 100vh;">
<MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center">
    @*School*@
    <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center align-items-center">
        <MudPaper Class="mud-theme-primary d-flex justify-content-center align-items-center" Width="256px" Height="128px">
            <MudButton OnClick="ToPage7" Color="Color.Primary" Style="color: white; background-color: #007bff;">
               In School Premismises
            </MudButton>
        </MudPaper>
    </MudItem>
    @*NCL*@
    <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center align-items-center">
        <MudPaper Class="mud-theme-primary d-flex justify-content-center align-items-center" Width="256px" Height="128px">
            <MudButton OnClick="ToPage6" Color="Color.Primary" Style="color: white; background-color: #007bff;">
                In NCL Premismises
            </MudButton>
        </MudPaper>
    </MudItem>

</MudGrid>
</div>

@code {
    void ToPage7()
    {
        LayoutState.UpdateProgress(100);
        Nav.NavigateTo("/page7");
    }
    void ToPage6()
    {
        LayoutState.UpdateProgress(100);
        Nav.NavigateTo("/page6");
    }
}
