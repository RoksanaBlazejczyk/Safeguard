@page "/page1"
@inject NavigationManager Nav

<div style="background-color: #B9B5B0; height: 100vh;">

    <h1>Safe Guard</h1>

    <MudPaper Class="d-flex justify-content-between gap-" Style="width: 100%;" Elevation="0">

        @* Child *@
        <div class="d-flex flex-column align-items-center">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="300px" Height="100%"
                      Style="background-color: #40B37C; border-radius: 15px; padding: 20px;">
                <div class="circle-container" style="background-color: #40B37C; border-radius: 50%; width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                    <img src="images/child.png" alt="Child Icon" width="100" height="100" />
                </div>
                <MudButton OnClick="ToPage2" Variant="Variant.Filled" Color="Color.Success"
                           Style="margin-top: 20px; width: 200px; font-size: 16px; transition: transform 0.3s ease-in-out;"
                           Class="hover-scale">
                    Select Child
                </MudButton>
            </MudPaper>
        </div>

        @* Adult *@
        <div class="d-flex flex-column align-items-center">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="300px" Height="500px"
                      Style="background-color: #3B6782; border-radius: 15px; padding: 20px;">
                <div class="circle-container" style="background-color: #3B6782; border-radius: 50%; width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                    <img src="images/adult.png" alt="Adult Icon" width="100" height="100" />
                </div>
                <MudButton OnClick="ToPage2" Variant="Variant.Filled" Color="Color.Primary"
                           Style="margin-top: 20px; width: 200px; font-size: 16px; transition: transform 0.3s ease-in-out;"
                           Class="hover-scale">
                    Select Adult
                </MudButton>
            </MudPaper>
        </div>

        @* NCL Staff *@
        <div class="d-flex flex-column align-items-center">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="300px" Height="500px"
                      Style="background-color: #E18A07; border-radius: 15px; padding: 20px;">
                <div class="circle-container" style="background-color: #E18A07; border-radius: 50%; width: 150px; height: 150px; display: flex; align-items: center; justify-content: center;">
                    <img src="images/nlcStaff.png" alt="NCL Staff Icon" width="100" height="100" />
                </div>
                <MudButton OnClick="ToPage2" Variant="Variant.Filled" Color="Color.Warning"
                           Style="margin-top: 20px; width: 200px; font-size: 16px; transition: transform 0.3s ease-in-out;"
                           Class="hover-scale">
                    Select Staff Member
                </MudButton>
            </MudPaper>
        </div>

    </MudPaper>

</div>

@* Hover Effect Styling *@
<style>
    .hover-scale:hover {
        transform: scale(1.1);
        box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5);
    }
</style>

@code {
    void ToPage2()
    {
        Nav.NavigateTo("Page2");
    }
}





