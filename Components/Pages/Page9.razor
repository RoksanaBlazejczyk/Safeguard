@page "/page9"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState
@inject CollectedAnswers Answer

<MudContainer Class="d-flex justify-center mt-3">
    <MudCard Elevation="5" Class="p-3 w-100">
        <!-- Title area -->
        <MudCardContent Class="d-flex justify-center">
            <MudText Typo="Typo.h4" Style="font-size: 32px; font-weight: bold; text-align: center;">
                After being referred to Safeguarding Board/Executive Board
            </MudText>
        </MudCardContent>

        <MudGrid Class="d-flex justify-center align-content-center" Style="margin-top: 2rem;">
            <!-- The Left button -->
            <MudItem xs="12" sm="12" lg="6">
                <MudCard Style="background-color: #e0e0e0; border: 2px solid black; border-radius: 8px; padding: 4px 8px 8px 8px;">
                    <MudCardContent Class="d-flex justify-center text-center" Style="padding: 4px 0;">
                    </MudCardContent>
                    <MudCardActions Style="padding: 8px;">
                        <MudButton OnClick="@(() => ToPage8("concernsLaterDate"))"
                                   Variant="Variant.Filled"
                                   FullWidth="true"
                                   Color="Color.Primary"
                                   Style="height: 150px; font-size: 16px; padding: 12px 16px; border-radius: 4px; border: 2px solid #ccc;">
                            <MudText>Further concerns at a later date - Contact Safeguarding Board/Safeguarding Team</MudText>
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>

            <!-- The Right button -->
            <MudItem xs="12" sm="12" lg="6">
                <MudCard Style="background-color: #e0e0e0; border: 2px solid black; border-radius: 8px; padding: 4px 8px 8px 8px;">
                    <MudCardContent Class="d-flex justify-center text-center" Style="padding: 4px 0;">
                    </MudCardContent>
                    <MudCardActions Style="padding: 8px;">
                        <MudButton OnClick="ToAP1Form"
                                   Variant="Variant.Filled"
                                   FullWidth="true"
                                   Color="Color.Primary"
                                   Style="height: 150px; font-size: 16px; padding: 12px 16px; border-radius: 4px; border: 2px solid #ccc;">
                            Completion of AP 1 Form (For Adults) - to be sent to Social Work
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>

            <!-- The End Button at bottom -->
            <MudItem xs="12">
                <div class="d-flex justify-center">
                    <MudButton OnClick="ToPageEnd"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               Style="margin-top: 20px;">
                        End
                        <MudIcon Icon="@Icons.Material.Filled.ArrowForward" />
                    </MudButton>
                </div>
            </MudItem>
        </MudGrid>

    </MudCard>
</MudContainer>






    @code {
        void ToPageEnd()
        {
        LayoutState.UpdateProgress(100);

        Nav.NavigateTo("/End");
        }
        void ToPage8(String answer)
        {
        Answer.Answer7 = answer;
        LayoutState.UpdateProgress(71);

        Nav.NavigateTo("/page8");
        }
        void ToAP1Form()
        {
        LayoutState.UpdateProgress(100);

