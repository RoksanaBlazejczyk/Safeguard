@page "/page4"
@inject NavigationManager Nav
<h1>It is a School Student or NCL Student?</h1>
<br />
<div style="background-color: #B9B5B0; height: 100vh;">

<MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center">

    @* Individual Raised Concern *@
    <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center align-items-center">
        <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                  Width="256px" Height="200px"
                  Style="background-color: #007BFF; border-radius: 15px; padding: 20px;">
                <div class="circle-container" style="background-color: #007BFF; border-radius: 50%; width: 100px; height: 100px; display: flex; align-items: center; justify-content: center;">
                <img src="images/page4school.png" alt="Individual Concern Icon" width="70" height="70" />
            </div>
            <MudButton OnClick="ToPage4School" Variant="Variant.Filled" Color="Color.Primary"
                       Style="margin-top: 10px; width: 200px; font-size: 16px; transition: transform 0.3s ease-in-out;"
                       Class="hover-scale">
                School Student
            </MudButton>
        </MudPaper>
    </MudItem>

    @* Student Raised Concern *@
    <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center align-items-center">
        <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                  Width="256px" Height="200px"
                  Style="background-color: #28A745; border-radius: 15px; padding: 20px;">
                <div class="circle-container" style="background-color: #28A745; border-radius: 50%; width: 100px; height: 100px; display: flex; align-items: center; justify-content: center;">
                <img src="images/page4NCL.png" alt="Student Concern Icon" width="70" height="70" />
            </div>
            <MudButton OnClick="ToPage4NCL" Variant="Variant.Filled" Color="Color.Success"
                       Style="margin-top: 10px; width: 200px; font-size: 16px; transition: transform 0.3s ease-in-out;"
                       Class="hover-scale">
                NCL Student
            </MudButton>
        </MudPaper>
    </MudItem>

</MudGrid>
</div>
@* Hover Effect Styling *@
<style>
    .hover-scale:hover {
        transform: scale(1.1);
        box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.5);
    }
</style>


@code {
    void ToPage4School()
    {
        Nav.NavigateTo("Page5");
    }
    void ToPage4NCL()
    {
        Nav.NavigateTo("Page5");
    }
}
