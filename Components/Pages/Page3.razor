@page "/page3"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState
<div style="background-color: #B9B5B0; height: 100vh;">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="8" md="6">
            <h1 style="text-align: center;">How have you become aware of this incident?</h1>
        </MudItem>
    </MudGrid>
    <br />
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center">

        @* Individual Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Suspicion" Variant="Variant.Filled"
                           Class="animated-button blue-button">
                    Suspicion of neglect/abuse

                </MudButton>
            </MudPaper>
        </MudItem>

        @* Student Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Allegation" Variant="Variant.Filled"
                           Class="animated-button green-button">
                    Allegation of neglect/abuse
                </MudButton>
            </MudPaper>
        </MudItem>

        @* NCL Staff Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Concern" Variant="Variant.Filled"
                           Class="animated-button orange-button">
                    Concerns about someone's behaviour

                </MudButton>
            </MudPaper>
        </MudItem>

        @* Visitor Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Risk" Variant="Variant.Filled"
                           Class="animated-button grey-button">
                    At risk to self or others
                </MudButton>
            </MudPaper>
        </MudItem>

    </MudGrid>
</div>

@* Button Animations & Styling *@
<style>
    .animated-button {
        margin-top: 10px;
        width: 200px;
        font-size: 16px;
        transition: all 0.3s ease-in-out;
        border-radius: 8px;
        padding: 10px;
    }

        /* Hover effect with scaling and glow */
        .animated-button:hover {
            transform: scale(1.1);
            box-shadow: 0px 0px 12px rgba(255, 165, 0, 0.8); /* Orange glow effect */
        }

    /* Blue Button Styling */
    .blue-button {
        background-color: #1E90FF !important;
        color: white;
        border: none;
    }

        .blue-button:hover {
            background: linear-gradient(90deg, #1E90FF, #FFA500); /* Blue to Orange gradient */
        }

    /* Green Button Styling */
    .green-button {
        background-color: #32CD32 !important;
        color: white;
        border: none;
    }

        .green-button:hover {
            background: linear-gradient(90deg, #32CD32, #FFA500); /* Green to Orange gradient */
        }

    /* Orange Button Styling */
    .orange-button {
        background-color: #FFA500 !important;
        color: white;
        border: none;
    }

        .orange-button:hover {
            background: linear-gradient(90deg, #FFA500, #1E90FF); /* Orange to Blue gradient */
        }

    /* Grey Button Styling */
    .grey-button {
        background-color: #F5F5F5 !important;
        color: black;
        border: none;
    }

        .grey-button:hover {
            background: linear-gradient(90deg, #F5F5F5, #1E90FF); /* Grey to Blue gradient */
        }
</style>
@code {

    @*Method if person clicks Suspicion of neglect/abuse*@

    void ToPage4Suspicion()

    {
        LayoutState.UpdateProgress(67); // Move to 67% when navigating to Page 4
        Nav.NavigateTo("/page4");
    }

    @*Method if person clicks Allegation of neglect/abuse*@

    void ToPage4Allegation()

    {
        LayoutState.UpdateProgress(67);
        Nav.NavigateTo("/page4");
    }

    @*Method if person clicks Concerns about someone’s behaviour*@

    void ToPage4Concern()

    {
        LayoutState.UpdateProgress(67);
        Nav.NavigateTo("/page4");
    }

    @*Method if person clicks At risk to self or others*@

    void ToPage4Risk()

    {
        LayoutState.UpdateProgress(67);
        Nav.NavigateTo("/page4");
    }

}

