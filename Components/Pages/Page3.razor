@page "/page3"
@using SafeGuard.Services
@inject NavigationManager Nav
@inject SafeGuard.Services.LayoutState LayoutState
@inject CollectedAnswers Answer

<div style="background-color: #B9B5B0; height: 100vh;">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" sm="8" md="6">
            <h1 style="text-align: center;">How have you become aware of this incident?</h1>
        </MudItem>
    </MudGrid>
    <br />
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center">

        @* Individual Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Suspicion" Variant="Variant.Filled"
                           Class="animated-button blue-button">
                    Suspicion of neglect/abuse

                </MudButton>
            </MudPaper>
        </MudItem>

        @* Student Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Allegation" Variant="Variant.Filled"
                           Class="animated-button green-button">
                    Allegation of neglect/abuse
                </MudButton>
            </MudPaper>
        </MudItem>

        @* NCL Staff Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Concern" Variant="Variant.Filled"
                           Class="animated-button orange-button">
                    Concerns about someone's behaviour

                </MudButton>
            </MudPaper>
        </MudItem>

        @* Visitor Concern *@
        <MudItem xs="6" sm="6" md="6" class="d-flex justify-content-center" style="display: none;">
            <MudPaper Class="d-flex flex-column align-items-center justify-content-center"
                      Width="256px" Height="200px"
                      Style="background-color: #FFFFFF; border-radius: 15px; padding: 20px; box-shadow: 2px 2px 10px rgba(0,0,0,0.1);">
                <MudButton OnClick="ToPage4Risk" Variant="Variant.Filled"
                           Class="animated-button grey-button">
                    At risk to self or others
                </MudButton>
            </MudPaper>
        </MudItem>

    </MudGrid>
</div>

@code {

    @*Method if person clicks Suspicion of neglect/abuse*@

    void ToPage4Suspicion(String answer)

    {
        Answer.Answer3 = answer;
        LayoutState.UpdateProgress(57); // Move to 67% when navigating to Page 4
        Nav.NavigateTo("/page4");
    }

    @*Method if person clicks Allegation of neglect/abuse*@

    void ToPage4Allegation(String answer)

    {
        Answer.Answer3 = answer;
        LayoutState.UpdateProgress(57);
        Nav.NavigateTo("/page4");
    }

    @*Method if person clicks Concerns about someone’s behaviour*@

    void ToPage4Concern(String answer)

    {
        Answer.Answer3 = answer;
        LayoutState.UpdateProgress(57);
        Nav.NavigateTo("/page4");
    }

    @*Method if person clicks At risk to self or others*@

    void ToPage4Risk(String answer)

    {
        Answer.Answer3 = answer;
        LayoutState.UpdateProgress(57);
        Nav.NavigateTo("/page4");
    }

}

