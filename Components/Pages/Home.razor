@page "/"
@using SafeGuard.Services
@inject NavigationManager Navigation
@inject SafeGuard.Services.LayoutState LayoutState

<MudContainer Class="d-flex justify-center mt-3">
    <MudCard Elevation="5" Class="p-3 w-100">

        <SafeguardingHeader Title="Safeguarding Decision Tool" />

        <MudImage Style="max-width: 100%; height: auto; display: block; padding: 2rem;"
                  Src="images/NCL_SG_01.png"
                  Alt="NCL Logo" />

        <MudElement Class="d-flex justify-content-center">
            <MudButton OnClick="ToPage1"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       Class="pulse-glow">
                Start Interactive Safeguarding Tool
            </MudButton>
        </MudElement>

    </MudCard>
</MudContainer>



@code {
    protected override void OnInitialized()
    {
        LayoutState.UpdateProgress(0); // Reset progress when on the home page
    }

    void ToPage1()
    {
        LayoutState.UpdateProgress(16); // Move to 16% when navigating to Page 1
        Navigation.NavigateTo("/page1");
    }
}
